<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             xmlns:vm="using:D8_Demo.ViewModels"
             x:DataType="vm:M1ReadViewModel"
             x:Class="D8_Demo.Views.UserControl.M1ReadView">
    <Design.DataContext>
        <vm:M1ReadViewModel />
    </Design.DataContext>


    <Grid Margin="20">
        <ItemsControl ItemsSource="{Binding Sectors}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- 用 UniformGrid 来自动布局 -->
                    <UniformGrid Rows="4" Columns="4" ColumnSpacing="10" RowSpacing="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock  HorizontalAlignment="Center" Text="{Binding Title}" />
                        <TextBox Grid.Row="1" VerticalAlignment="Stretch" Text="{Binding Content}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>


</UserControl>