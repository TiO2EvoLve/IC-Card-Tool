<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="800"
             xmlns:vm="using:D8_Demo.ViewModels"
             x:DataType="vm:ContentViewModel"
             x:Class="D8_Demo.Views.UserControl.ReadView">
    
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:ContentViewModel />
    </Design.DataContext>
    
    <Grid Margin="20" RowDefinitions="Auto,Auto,*"  >
        <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <TextBox Width="200"></TextBox>
            <PathIcon Data="M 12,2A 10,10 0 1 1 11.999,2Z"
                      Width="24" Height="24"
                      Foreground="{Binding FindCard}" />
            <Button Command="{Binding ReadCardCommand}" Theme="{DynamicResource SolidButton}" Classes="Success">读取</Button>
            <TextBlock Text="当前状态：" VerticalAlignment="Center"></TextBlock>
            <Label Theme="{DynamicResource TagLabel}" Content="{Binding Status}" Classes="Circle Ghost Large Blue" />
        </StackPanel>
        <Border Grid.Row="1" Padding="20" BorderBrush="Lavender" BorderThickness="1"
                CornerRadius="10">
            <Grid  RowDefinitions="Auto,Auto" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">16进制不调整：</TextBlock>
                    <TextBox MinWidth="100" Text="{Binding Uid16}"></TextBox>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">16进制调整：</TextBlock>
                    <TextBox MinWidth="100" Text="{Binding Uid16_}"></TextBox>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">10进制不调整：</TextBlock>
                    <TextBox MinWidth="100" Text="{Binding Uid10}"></TextBox>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">10进制调整：</TextBlock>
                    <TextBox MinWidth="100" Text="{Binding Uid10_}"></TextBox>
                </StackPanel>
                <StackPanel Margin="0,30,0,0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                    <TextBlock VerticalAlignment="Center">ATS：</TextBlock>
                    <TextBox MinWidth="600" Text="{Binding Ats}"></TextBox>
                </StackPanel>
            </Grid>
        </Border>
        <Border Padding="20" Margin="0,10,0,0" Grid.Row="2" BorderBrush="YellowGreen" BorderThickness="1"
                CornerRadius="10">
                <Grid RowDefinitions="Auto,*">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="保存数据 :" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <ToggleSwitch IsChecked="{Binding IsChecked}" Theme="{DynamicResource SimpleToggleSwitch}"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" IsVisible="{Binding IsChecked}">
                            <TextBlock Text="下张卡号 :" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Text="{Binding Sn}" MinWidth="200"></TextBox>
                            <Button Command="{Binding SaveDataCommand}" Theme="{DynamicResource SolidButton}" >保存</Button>
                            <Button Command="{Binding ClearCardsCommand}" Theme="{DynamicResource SolidButton}" Classes="Warning" >清空</Button>
                        </StackPanel>
                    </StackPanel> 
                    <DataGrid Grid.Row="1" Margin="0,20,0,0" ItemsSource="{Binding Cards}" 
                              AutoGenerateColumns="False"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SN" Binding="{Binding SN}" Width="Auto" IsVisible="{Binding IsChecked}" />
                            <DataGridTextColumn Header="UID16" Binding="{Binding UID16}" Width="Auto" />
                            <DataGridTextColumn Header="UID16_" Binding="{Binding UID16_}" Width="Auto" />
                            <DataGridTextColumn Header="UID10" Binding="{Binding UID10}" Width="Auto" />
                            <DataGridTextColumn Header="UID10_" Binding="{Binding UID10_}" Width="Auto" />
                            <DataGridTextColumn Header="ATS" Binding="{Binding ATS}" Width="Auto" />
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="Auto" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
        </Border>
    </Grid>
</UserControl>